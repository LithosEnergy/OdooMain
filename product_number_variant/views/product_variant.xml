<?xml version="1.0" encoding="UTF-8"?>
	<odoo>
		<data>

      <record id="mrp_eco_product_variant_tree" model="ir.ui.view">
          <field name="name">product_variant_tree</field>
          <field name="model">product.variant</field>
          <field name="type">tree</field>
          <field eval="8" name="priority"/>
          <field name="arch" type="xml">
          <tree string="product variant">
            <field name="name"/>
            <field name="description"/>							
            <field name="sequence"/>
          </tree>
          </field>
        </record>


          <record id="mrp_eco_product_variant_form" model="ir.ui.view">
	            <field name="name">product_variant_form</field>
	            <field name="model">product.variant</field>
				      <field name="type">form</field>
	            <field name="arch" type="xml">
	                 <form string="product variant">
                    <sheet>
                        <group col="2">
                            <field name="name"/>
                            <field name="description"/>		
                            <field name="sequence"/>
                            <field name="user_id"/>							
                        </group>
                    </sheet>
                </form>
	           	</field>
	        </record>


        <record id="mrp_eco_product_variant" model="ir.actions.act_window">
          <field name="name">Product Variant</field>
          <field name="res_model">product.variant</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
              create a new product variant
            </p>
          </field>
        </record>     


        <menuitem
        id="menu_mrp_plm_product_variant"
        name="Product Variant"
        action="mrp_eco_product_variant"
        parent="mrp_plm.menu_mrp_plm_configuration"
        sequence="30"/>    

         <record model="ir.ui.view" id="product_template_form_view_procurement_button_inherited">
            <field name="name">product_template_procurement_inherited</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.product_template_form_view_procurement_button"/>
            <field name="arch" type="xml">
              <xpath expr="//header" position='inside'>          
                <button string="Generate New Variant" type="object" class="btn-success"
                        name="action_genrate_new_variant"
                        attrs="{'invisible': [('type', '!=', 'product')]}"/>                
              </xpath>
            </field>
          </record>       
        
    </data>
</odoo>