<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

 <!-- UPLOAD DOCUMENT WIZARD IN mrp.eco  -->

        <record id="custom_mrp_eco_wizard_form" model="ir.ui.view">
        <field name="name">mrp.eco.wizard.form</field>
        <field name="model">mrp.eco</field>
        <field name="arch" type="xml">
            <form string="Add products in affected parts">          
                    
              <sheet>
                <!-- <separator string="" colspan="4"/> -->
                    <field name="mrp_bom_wizard_line">
		                        <tree editable="false" create="false" delete="false" decoration-bf="is_changed_production_state==True">                                
                                    <field name="is_product_available_in_eco" invisible="1"/> 
                                    <field name="is_changed_production_state" invisible="1"/> 
                                    <field name="selected_product" string=" " attrs="{'invisible': [('is_product_available_in_eco', '=', True)]}"/> 
                                    <field name="affected_product_id" readonly="1"/> 
                                    <field name="production_state" readonly="1"/> 
                                    <field name="status" readonly="1"/> 
                                    <field name="eco_id_for_bom_line_wizard" invisible="1"/>
                                </tree>	
                                                                                                
                    </field> 
                    

                    <div align="center">
                        <footer>
                            <button name="select_all_products" string="SELECT ALL &#38; ADD TO ECO" type="object" class="oe_highlight"/>
                                <span style="padding-left: 1%;"></span>

                            <button name="add_products" string="ADD TO ECO" type="object" class="oe_highlight"/>
                                <span style="padding-left: 1%;"></span>

                            <button string="_Cancel" class="btn-default oe_highlight" special="cancel" />
                        </footer>
                    </div>                      
                    
                </sheet>
                </form>
            </field>
        </record> 


    </data>
</odoo>