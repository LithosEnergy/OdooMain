<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

 <!-- UPLOAD DOCUMENT WIZARD IN mrp.eco  -->

        <record id="mrp_eco_wizard_form" model="ir.ui.view">
        <field name="name">mrp.eco.wizard.form</field>
        <field name="model">mrp.eco</field>
        <field name="arch" type="xml">
            <form string="Upload Document">          
                    
              <sheet>
                <separator string="Upload Document" colspan="4"/>
                    <field name="bom_document_wizard_line">
		                        <tree editable="bottom">
                                    <field name="bom_item_number"/> 
                                    <field name="bom_upload_document_name"/>   
                                    <field name="bom_upload_document" filename="bom_upload_document_name"/>
                                    <field name="bom_mrp_eco" invisible="1"/>
                                    <field name="bom_full_url" widget="url" readonly="1" attrs="{'invisible': [('bom_upload_document', '=', False)]}"/>
                                </tree>	
                                                                                                
                    </field> 

                    <div align="center">
                        <footer>
                            <button name="add_document" string="Save And Close" type="object" class="oe_highlight"/>
                                <span style="padding-left: 1%;"></span>
                            <button string="_Cancel" class="btn-default oe_highlight" special="cancel" />
                        </footer>
                    </div>                      
                    
                </sheet>
                </form>
            </field>
        </record>      
        

    </data>
</odoo>