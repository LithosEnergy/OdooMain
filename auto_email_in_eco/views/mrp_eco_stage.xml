<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_mrp_eco_stage_view_form" model="ir.ui.view">
                <field name="name">inherit.mrp.eco.stage.view.form</field>
                <field name="model">mrp.eco.stage</field>
                <field name="inherit_id" ref="mrp_plm.mrp_eco_stage_view_form" />
                <field name="arch" type="xml">
                    <xpath expr="//field[@name='final_stage']" position="after">                        
                        <field name="auto_e_mail"/>  
                        <field name="email_template" domain="[('model_id', '=','Engineering Change Order (ECO)')]" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' attrs="{'invisible': [('auto_e_mail', '!=',True)]}"/>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>