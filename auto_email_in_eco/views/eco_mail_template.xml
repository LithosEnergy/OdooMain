        <record id="custom_plm_eco_email_template" model="mail.template">
            <field name="name">custom plm eco mail template</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="subject">${ctx['subject']|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="mrp_plm.model_mrp_eco"/>
            <field name="auto_delete" eval="True"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="xml">

            <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;"><tr><td align="center">
            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 24px; background-color: white; color: #454748; border-collapse:separate;">
            <tbody>

            <!-- HEADER -->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%" style="background-color: white; padding: 0; border-collapse:separate;">
                                <tr>
                                    <td valign="middle">
                                        <span style="font-size: 10px;">Your ECO</span><br/>
                                        <span style="font-size: 20px; font-weight: bold;">
                                            ${ctx['eco_summuary_name']|safe}
                                        </span>
                                    </td>
                                    <td valign="middle" align="right">
                                        <img src="/auto_email_in_eco/static/src/image/lithos_logo.png" style="padding: 0px; margin: 0px; height: 48px;" alt="${ctx['company_name']|safe}"/>
                                    </td>
                                </tr>
                                <tr><td colspan="2" style="text-align:center;">
                                <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin:4px 0px 32px 0px;"/>
                                </td></tr>
                            </table>
                        </td>
                    </tr>
                    <!-- CONTENT -->
                    <tr>
                        <td style="min-width: 590px;">
                            <p>
                                Hello,<br/>
                                Engineering Change Order <strong>(${ctx['eco_summuary_name']|safe})</strong> has been moved to stage <strong>${ctx['eco_stage_name']|safe}</strong>.<br/>

                                You can reply to this email if you have any questions.
                                <br/><br/>
                                Thank you,<br/>                      
                                ${ctx['email_from_usr']|safe}
                                
                            </p>
                        </td>
                    </tr>
                    <!-- FOOTER -->
                    <tr>
                        <td align="center" style="min-width: 590px; padding: 0 8px 0 8px; font-size:11px;">
                            <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 4px 0px;"/>
                            <strong>${ctx['company_name']|safe}</strong><br/>
                            <div style="color: #999999;">
                                <p><span>${ctx['company_phone']|safe}</span> <span>${object.create_uid.partner_id.company_id.email}</span> <span>${object.create_uid.partner_id.company_id.website}</span></p>      
                                    
                                
                            </div>
                        </td>
                    </tr>
            </tbody>
            </table>
            </td></tr>

            <!-- POWERED BY -->
            <tr>
                <td align="center" style="min-width: 590px;">
                        Powered by <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=email" style="color: #875A7B;">Odoo</a>
                </td>
            </tr>
            </table>
                
            </field>
        </record>



    </data>
</odoo>