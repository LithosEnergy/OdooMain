<odoo>
    <data>
       <record id="custom_plm_eco_email_template" model="mail.template">
            <field name="name">custom plm eco mail template</field>
            <field name="email_from">${ctx['email_from']|safe}</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="subject">${ctx['subject']|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="mrp_plm.model_mrp_eco"/>
            <field name="auto_delete" eval="True"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[<html>
                        <head></head>
                        % set company = record and record.company_id or ctx.get('company')           
                        <p>Dear,</p>
                        <p>User has changed ECO(${ctx['eco_summuary_name']|safe}) stage to ${ctx['eco_stage_name']|safe}.</p>

                        <p>Regards,</p>
                        <td>${ctx['email_from_usr']|safe}</td>

                        </html>]]>
            </field>
        </record>


    </data>
</odoo>