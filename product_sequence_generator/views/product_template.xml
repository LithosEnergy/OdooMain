<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="production_state_product_template_form_view" model="ir.ui.view">
            <field name="name">production.state.product.normal.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">                
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name='production_state'/>                    
                </xpath>
                
                <xpath expr="///page[@name='purchase']" position="inside">
                <group string="Manufacturer Information">
                    <group>
                        <field name='manufacturer' options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                        <field name='manufacturer_part_number'/>
                    </group>
                </group>           
                </xpath>

            </field>
        </record>
    </data>
</odoo>
