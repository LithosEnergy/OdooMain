<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <record id="mulit_pro_revisions_product_template_form_view" model="ir.ui.view">
            <field name="name">multi.pro.revision.product.normal.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field eval="7" name="priority"/>
            <field name="arch" type="xml">
                
                <xpath expr="//form/sheet/notebook" position="inside">                 

                    <page string="Product Revisions">
		                    <field name="product_revision_line">
		                        <!-- <tree editable="bottom"> -->
                                 <tree editable="false" create="false" delete="false"> 
                                    <field name ="user_id" string="User ID" readonly="1"/>
                                    <field name ="date_creation" string="Created Date" readonly="1"/>                                  
                                    <field name ="revision" string="Revision" readonly="1"/>
                                    <field name="notes" readonly="1"/>                                    
		                            <field name="product_template_id" invisible="1"/>
                                    <!-- <field name="document_wizard_line" invisible="1"/> -->
                                    <field name="document_wizard_line" readonly="1"/>
                                    <!-- <button name="upload_doc" string="Upload Document" type="object"  class="oe_highlight" width="0.1" options='{"warn": true}'/>		                         -->
                                
                                </tree>	                                                       
		                    </field>
                    </page>

                </xpath>
            </field>
        </record>  


       


    </data>
</odoo>