<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- UPLOAD DOCUMENT WIZARD IN mrp.eco  -->
        <record id="mrp_eco_product_form" model="ir.ui.view">
        <field name="name">mrp.eco.product.form</field>
        <field name="model">mrp.eco.product</field>
        <field name="arch" type="xml">
            <form string="Upload Document">
              <sheet>
                <separator string="Upload Document" colspan="4"/>
                    <field name="document_wizard_line" editable="bottom">
		                        <tree editable="bottom">
                                    <field name="item_number"/>                                    
                                    <field name="upload_document_name"/>   
                                    <field name="upload_document" filename="upload_document_name"/>
                                    <field name="mrp_eco_product_id" invisible="1"/>
                                    <field name="full_url" widget="url" readonly="1" attrs="{'invisible': [('upload_document', '=', False)]}"/>
                                </tree>
                                <form>
                                </form>                                                                                     
                    </field>               

                    
                    <div align="center">
                        <footer>
                            <button name="add_document" string="Save And Close" type="object" class="oe_highlight"/>
                                <span style="padding-left: 1%;"></span>
                            <button string="_Cancel" class="btn-default oe_highlight" special="cancel" />                            
                        </footer>     
                    </div>                     
   
                </sheet>
                </form>
            </field>
        </record>


        <!-- UPLOAD DOCUMENT WIZARD IN products  -->
        <record id="mrp_eco_product_form_in_product_template" model="ir.ui.view">
        <field name="name">product.revisions.form</field>
        <field name="model">product.revisions</field>
        <field name="arch" type="xml">
            <form string="Upload Document" >
              <sheet>
                <separator string="Upload Document" colspan="4"/>
                    <field name="document_wizard_line">
		                        <tree editable="false" create="false" delete="false">
                                    <field name="item_number"/>                                    
                                    <field name="upload_document_name"/>   
                                    <field name="upload_document" filename="upload_document_name"/>
                                    <field name="product_revisions_id" invisible="1"/>
                                    <field name="full_url" widget="url" readonly="1" attrs="{'invisible': [('upload_document', '=', False)]}"/>
                                </tree>	 
                                <form>
                                    <field name="upload_document" filename="upload_document_name"/>
                                </form>                                                      
                    </field>
                    <div align="center"><footer>
                     
                    </footer></div>               
                  
                    
                </sheet>
                </form>
            </field>
        </record>      
       


    </data>
</odoo>