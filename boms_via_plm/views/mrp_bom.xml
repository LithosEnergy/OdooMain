<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="inherit_mrp_bom_view_form" model="ir.ui.view">
            <field name="name">inherit.mrp.bom.view.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="component_count"/>
                </xpath>
                <!-- New field added for production state -->
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="production_state_id"/>
                </xpath>
                <!-- New field added for component production state -->
                <xpath expr="//field[@name='bom_line_ids']/tree" position="inside">
                    <field name="production_state_id" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>