<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_account_form" model="ir.ui.view">
            <field name="name">inherit.account.account.form</field>
            <field name="model">account.account</field>
            <field name="inherit_id" ref="account.view_account_form"/>
            <field name="arch" type="xml">
                  <xpath expr="//field[@name='deprecated']" position="after">
                        <field name="bill_sync" />
                        <field name="bill_id" />
                        <field name="bill_account_type" placeholder="Add integer value(like 7 for Expense account type)"/>
                  </xpath>
            </field>
      </record> 
    </data>
</odoo>
