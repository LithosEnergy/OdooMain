<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
    	<record id="stock_approval_request_mail_template" model="mail.template">
            <field name="name">Stock Move Approval Requests</field>
            <field name="model_id" ref="model_stock_picking"/>
            <field name="email_from">{{ (user.email_formatted) or '' }}</field>
            <field name="email_to">{{ ctx['email_to']}}</field>
            <field name="subject">Stock move approval request</field>
            <field name="body_html" type="html">
                <div>
                    A stock move requires your approval before it may be processed in Odoo. Use the button below to view the transfer.<br/>
                    <div style="margin: 32px 0px 32px 0px; text-align: center;">
                        <a t-att-href="ctx['url_id']" type="button"  style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                            View Transfer
                        </a>
                    </div>
               </div>
            </field>
        </record>
    </data>
</odoo>
