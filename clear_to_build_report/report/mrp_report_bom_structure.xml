        <template id="mrp.report_mrp_bom">
            <t t-if="data['report_type'] == 'html'" t-call="clear_to_build_report.report_mrp_bom_html"/>
            <t t-elif="data['report_structure'] != 'clear_to_build'" t-call="clear_to_build_report.report_mrp_bom_pdf"/>
            <t t-elif="data['report_structure'] == 'clear_to_build'" t-call="clear_to_build_report.report_mrp_bom_clear_to_build_pdf"/>
        </template>

        <template id="report_mrp_bom_line_inherit_clear_to_build" inherit_id="mrp.report_mrp_bom_line">
            <xpath expr="//tr[1]" position="attributes">
                <attribute name="t-att-style">l['qty_avail']</attribute>
            </xpath>
            <xpath expr="//td[3]" position="replace">
                <td class="text-right o_mrp_bom_qty"><span><t t-esc="l['prod_qty']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
            </xpath>
            <xpath expr="//td[@groups='uom.group_uom']" position="replace">
                <td class="o_mrp_bom_qty" groups="uom.group_uom"><span><t t-esc="l['prod_uom']"/></span></td>
                <td class="text-right o_mrp_on_hand o_hidden"><span><t t-esc="l['qty_available']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
                <td class="text-right o_mrp_on_hand o_hidden"><span><t t-esc="l['qty_pre_available']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
                <td class="text-right o_mrp_on_hand o_hidden"><span><t t-esc="l['qty_forecasted']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
            </xpath>
            <xpath expr="//td[@name='td_opr']" position="after">
                <td class="o_mrp_on_hand o_hidden"></td>
            </xpath>
            <xpath expr="//tr[@class='o_mrp_bom_report_line o_mrp_bom_cost']/td[@groups='uom.group_uom']" position="after">
                <td class="o_mrp_on_hand o_hidden"></td>
                <td class="o_mrp_on_hand o_hidden"></td>
                <td class="o_mrp_on_hand o_hidden"></td>
            </xpath>
            <xpath expr="//td[@name='td_mrp_bom']" position="after">
                <td class="text-center o_mrp_on_hand o_hidden"><span><input name="small_header" type="checkbox" t-att-checked="l['is_purchase'] or None" onclick="return false;"/></span></td>
            </xpath>
        </template>

        <template id="report_mrp_operation_line_inherit_clear_to_build" inherit_id="mrp.report_mrp_operation_line">
