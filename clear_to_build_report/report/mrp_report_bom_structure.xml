    <template id="report_mrp_bom_clear_to_build_pdf_line">
      <t t-set="currency" t-value="data['currency']"/>
      <t t-foreach="data['lines']" t-as="l">
          <t t-set="space_td" t-value="'margin-left: '+ str(l['level'] * 20) + 'px;'"/>
          <tr t-if="l['type'] != 'operation'" t-att-style="l['qty_avail']">
              <td>
                  <div t-att-style="space_td">
                    <div><t t-esc="l['name']"/></div>
                  </div>
              </td>
              <td name="td_mrp_code">
                  <div t-if="l.get('code')" t-esc="l['code']" />
              </td>
              <td class="text-center o_mrp_on_hand"><span><input name="small_header" type="checkbox" t-att-checked="'is_purchase' in list(l.keys()) and l['is_purchase'] or None"/></span></td>
              <td class="text-right">
                  <span>
                      <t t-if="l['type'] == 'operation'" t-esc="l['quantity']" t-options='{"widget": "float_time"}'/>
                      <t t-if="l['type'] == 'bom'" t-esc="l['quantity']" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/>
                  </span>
              </td>
              <td groups="uom.group_uom"><span><t t-esc="l['uom']"/></span></td>
              <td class="text-right o_mrp_on_hand"><span><t t-esc="'qty_available' in list(l.keys()) and l['qty_available'] or 0.0" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
              <td class="text-right o_mrp_on_hand"><span><t t-esc="'qty_pre_available' in list(l.keys()) and l['qty_pre_available'] or 0.0" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
              <td class="text-right o_mrp_on_hand"><span><t t-esc="'qty_forecasted' in list(l.keys()) and l['qty_forecasted'] or 0.0" t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'/></span></td>
          </tr>
      </t>
    </template>

